                                    <table align="center" border="0" cellpadding="0" cellspacing="0" style="max-width:600px;" width="100%">
                                        <tbody>
                                            <tr>
                                                <td align="center" style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 14px; font-weight: 400; line-height: 14px; padding: 5px 0 10px 0;">
                                                    <p style="font-size: 14px; font-weight: 400; line-height: 14px; color: #333333;">
                                                        Marius Stein
                                                    </p>
                                                    <p style="font-size: 14px; font-weight: 400; line-height: 14px; color: #333333;">
                                                        Maarweg 18 | 50933 Cologne | Germany
                                                    </p>
                                                    <p style="font-size: 14px; font-weight: 400; line-height: 14px; color: #333333;">
                                                        +49 152 519 417 20
                                                    </p>
                                                    <p style="font-size: 14px; font-weight: 400; line-height: 14px; color: #333333;">
                                                        E-Mail: mariusstein7@gmail.com
                                                    </p>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <!--[if (gte mso 9)|(IE)]>
                                    </td>
                                    </tr>
                                    </table>
                                    <![endif]-->
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <!--[if (gte mso 9)|(IE)]>
                    </td>
                    </tr>
                    </table>
                    <![endif]-->
                </td>
            </tr>
        </tbody>
    </table>
